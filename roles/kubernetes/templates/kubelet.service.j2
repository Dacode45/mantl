[Unit]
Description=Kubernetes Kubelet
Documentation=https://github.com/GoogleCloudPlatform/kubernetes
After=network.target docker.service
Requires=network.target docker.service

[Service]
ExecStart=/usr/bin/kubelet \
  {% if 'role=control' in group_names -%}
  --api-servers=http://localhost:8085 \
  --register-schedulable=false \
  {% else -%}
  --api-servers=https://kubernetes.service.consul:{{ kube_master_port }} \
  --kubeconfig=/etc/kubernetes/kubeconfig.yml \
  --tls-cert-file={{ host_cert }} \
  --tls-private-key-file={{ host_key }} \
  --v={{ kube_log_level }} \
  {% endif -%}
  --allow-privileged=true \
  --cluster-dns={{ private_ipv4 }} \
  --cluster-domain={{ dns_domain }} \
  --config={{ kube_manifest_dir }} {% if enable_cloud_provider %} \
  --cloud-provider={{ cloud_provider }} \
  --cloud-config={{ cloud_provider_config }} {% endif %} \
  --hostname-override={{ inventory_hostname }} \
  {% if calico_image is defined -%}
  --network-plugin=cni \
  --network-plugin-dir=/etc/cni/net.d {% endif %}


Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
